{
  "name": "nidamjs",
  "version": "0.0.1",
  "private": false,
  "type": "module",
  "main": "./dist/nidam.umd.js",
  "module": "./dist/nidam.js",
  "style": "./dist/nidam.css",
  "exports": {
    ".": {
      "import": "./dist/nidam.js",
      "require": "./dist/nidam.umd.cjs"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "src",
    "docs",
    "readme.md"
  ],
  "scripts": {
    "imports": "bun -e \"await import('./src/index.js')\"",
    "test": "vitest run --coverage",
    "test:watch": "vitest --coverage",
    "lint": "tsc --noEmit",
    "format": "prettier -w .",
    "quality": "bun run imports && bun run lint && bun run test && bun run format",
    "build": "vite build",
    "dev": "vite"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "3.2.4",
    "express": "^5.2.1",
    "jsdom": "^27.0.0",
    "prettier": "^3.8.1",
    "retypeapp": "^3.12.0",
    "typescript": "^5.9.2",
    "vite": "^7.3.1",
    "vitest": "^3.2.4"
  }
}
